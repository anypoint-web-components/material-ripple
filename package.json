{
  "name": "@anypoint-web-components/material-ripple",
  "description": "Adds a material design ripple to any container. It's a port of @polymer/paper-ripple for ESM.",
  "version": "1.0.2",
  "license": "Apache-2.0",
  "main": "index.js",
  "module": "index.js",
  "keywords": [
    "web-components",
    "anypoint",
    "ripple",
    "material design"
  ],
  "author": {
    "name": "Pawel Uchida-Psztyc",
    "email": "pawel.psztyc@mulesoft.com"
  },
  "contributors": [
    "Your name can be here!"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/anypoint-web-components/material-ripple.git"
  },
  "bugs": {
    "url": "https://github.com/anypoint-web-components/material-ripple/issues",
    "email": "arc@mulesoft.com"
  },
  "dependencies": {
    "@advanced-rest-client/arc-icons": "^3.3.3",
    "lit-element": "^2.4.0"
  },
  "devDependencies": {
    "@advanced-rest-client/arc-demo-helper": "^1.0.17",
    "@anypoint-web-components/anypoint-checkbox": "^1.1.3",
    "@open-wc/eslint-config": "^4.3.0",
    "@open-wc/testing": "^2.5.32",
    "@polymer/iron-test-helpers": "^3.0.1",
    "@web/dev-server": "^0.1.8",
    "@web/test-runner": "^0.13.13",
    "@web/test-runner-playwright": "^0.8.4",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "husky": "^7.0.0",
    "lint-staged": "^11.0.0",
    "sinon": "^11.0.1",
    "typescript": "^4.2.2",
    "typescript-lit-html-plugin": "^0.9.0"
  },
  "scripts": {
    "start": "web-dev-server --app-index demo/index.html --node-resolve --open --watch --root-dir .",
    "lint:eslint": "eslint --ext .js,.html . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
    "lint:types": "tsc",
    "lint": "npm run lint:eslint",
    "format": "npm run format:eslint",
    "test": "web-test-runner test/**/*.test.js --coverage --node-resolve --playwright --browsers chromium firefox webkit",
    "test:watch": "web-test-runner test/**/*.test.js --node-resolve --watch --playwright --browsers chromium",
    "gen:wc": "wca analyze \"*.js\" --outFile custom-elements.json"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ],
    "ignorePatterns": "*.d.ts",
    "overrides": [
      {
        "files": [
          "demo/**/*.js",
          "test/**/*.js",
          "**/demo/**/*.html"
        ],
        "rules": {
          "no-console": "off",
          "no-unused-expressions": "off",
          "no-plusplus": "off",
          "no-param-reassing": "off",
          "class-methods-use-this": "off",
          "import/no-extraneous-dependencies": "off"
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  }
}
